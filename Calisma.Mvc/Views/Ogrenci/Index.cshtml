@model List<Calisma.Model.Ogrenci>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ogrenci Listesi</h2>
<a class="btn btn-xs btn-success" href="@Url.Action("Ekle","Ogrenci")"><i class="fa fa-plus"></i> Ekle</a>
@*<button type="button" class="btn btn-success" href="@Url.Action("Ekle","Ogrenci")">Ekle</button>*@
<table class="table table-hover">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>No</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogrenci in Model)
        {
        <tr>
            <td>@ogrenci.Ad</td>
            <td>@ogrenci.Soyad</td>
            <td>@ogrenci.OgrenciNo</td>
            <td><a class="btn btn-xs btn-primary" href="@Url.Action("Detay","Ogrenci", new { id = @ogrenci.Id })"><i class="fa fa-plus"></i> Detay</a></td>
        </tr>
        }
    </tbody>
</table>
